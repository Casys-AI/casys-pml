{
  "name": "@casys/pml",
  "version": "0.2.6",
  "license": "MIT",
  "exports": {
    ".": "./mod.ts",
    "./cli": "./src/cli/mod.ts",
    "./workspace": "./src/workspace.ts",
    "./security": "./src/security/mod.ts",
    "./permissions": "./src/permissions/mod.ts"
  },
  "publish": {
    "include": ["mod.ts", "src/**/*.ts", "README.md"]
  },
  "imports": {
    "@cliffy/command": "jsr:@cliffy/command@1.0.0-rc.8",
    "@std/fs": "jsr:@std/fs@1.0.19",
    "@std/path": "jsr:@std/path@^1",
    "@std/fmt": "jsr:@std/fmt@^1.0.8",
    "@std/fmt/colors": "jsr:@std/fmt@^1.0.8/colors",
    "@std/assert": "jsr:@std/assert@^1",
    "@std/encoding/hex": "jsr:@std/encoding@^1/hex",
    "@std/log": "jsr:@std/log@0.224.14",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.0",
    "@std/testing": "jsr:@std/testing@^1.0.16"
  },
  "tasks": {
    "dev": "deno run -A src/cli/mod.ts",
    "compile": "deno compile -A --unstable-worker-options --no-check --include=./src/sandbox/execution/sandbox-script.ts -o ~/.deno/bin/pml ./src/cli/mod.ts",
    "compile:linux": "deno compile -A --unstable-worker-options --no-check --include=./src/sandbox/execution/sandbox-script.ts --target x86_64-unknown-linux-gnu -o dist/pml-linux-x64 ./src/cli/mod.ts",
    "compile:macos-x64": "deno compile -A --unstable-worker-options --no-check --include=./src/sandbox/execution/sandbox-script.ts --target x86_64-apple-darwin -o dist/pml-macos-x64 ./src/cli/mod.ts",
    "compile:macos-arm": "deno compile -A --unstable-worker-options --no-check --include=./src/sandbox/execution/sandbox-script.ts --target aarch64-apple-darwin -o dist/pml-macos-arm64 ./src/cli/mod.ts",
    "compile:windows": "deno compile -A --unstable-worker-options --no-check --include=./src/sandbox/execution/sandbox-script.ts --target x86_64-pc-windows-msvc -o dist/pml-windows-x64.exe ./src/cli/mod.ts",
    "compile:all": "mkdir -p dist && deno task compile:linux && deno task compile:macos-x64 && deno task compile:macos-arm && deno task compile:windows",
    "install": "deno task compile",
    "test": "deno test -A --unstable-worker-options --unstable-broadcast-channel tests/",
    "test:unit": "deno test -A --unstable-worker-options --unstable-broadcast-channel tests/*.ts",
    "test:e2e": "deno test -A --unstable-worker-options --unstable-broadcast-channel tests/e2e/",
    "check": "deno check src/**/*.ts"
  }
}
