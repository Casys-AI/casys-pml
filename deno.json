{
  "name": "@casys/mcp-gateway",
  "version": "0.1.0",
  "license": "MIT",
  "exports": "./mod.ts",
  "publish": {
    "include": [
      "mod.ts",
      "src/",
      "README.md",
      "LICENSE"
    ],
    "exclude": [
      "src/**/*_test.ts",
      "src/**/*.bench.ts"
    ]
  },
  "nodeModulesDir": "auto",
  "tasks": {
    "dev": "deno run --watch --allow-all src/main.ts",
    "dev:fresh": "cd src/web && vite",
    "dev:fresh:legacy": "cd src/web && deno run -A --unstable-hmr dev.ts",
    "fresh:build": "cd src/web && vite build",
    "test": "deno test --allow-all",
    "test:unit": "deno test --allow-all tests/unit/",
    "test:integration": "deno test --allow-all tests/integration/ --ignore=tests/integration/e2e_migration_test.ts",
    "test:e2e": "RUN_E2E_TESTS=true deno test --allow-all tests/integration/e2e_migration_test.ts",
    "bench": "deno bench --allow-all",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "check": "deno check src/**/*.ts",
    "build": "deno compile --allow-all --output=agentcards src/main.ts",
    "cli": "deno run --allow-all src/main.ts",
    "cli:init:dry": "deno run --allow-all src/main.ts init --dry-run --config tests/fixtures/mcp-config-sample.json",
    "cli:init:dry:mocks": "deno run --allow-all src/main.ts init --dry-run --config tests/fixtures/mcp-config-mocks.json",
    "cli:init:help": "deno run --allow-all src/main.ts init --help",
    "serve:playground": "AGENTCARDS_WORKFLOW_PATH=config/workflow-templates.yaml AGENTCARDS_DB_PATH=/home/ubuntu/CascadeProjects/AgentCards/.agentcards.db deno run --allow-all src/main.ts serve --port 3001 --config config/.mcp-servers.json",
    "mock:fs": "deno run --allow-all tests/mocks/filesystem-mock.ts",
    "mock:db": "deno run --allow-all tests/mocks/database-mock.ts",
    "mock:api": "deno run --allow-all tests/mocks/api-mock.ts"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "semiColons": true,
    "indentWidth": 2
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "imports": {
    "fresh": "jsr:@fresh/core@^2.0.0",
    "fresh/": "jsr:/@fresh/core@^2.0.0/",
    "@fresh/plugin-vite": "jsr:@fresh/plugin-vite@^1.0.0",
    "vite": "npm:vite@^7.1.3",
    "preact": "npm:preact@^10.27.0",
    "preact/hooks": "npm:preact@^10.27.0/hooks",
    "preact/jsx-runtime": "npm:preact@^10.27.0/jsx-runtime",
    "preact/jsx-dev-runtime": "npm:preact@^10.27.0/jsx-dev-runtime",
    "@preact/signals": "npm:@preact/signals@^2.5.1",
    "@preact/signals-core": "npm:@preact/signals-core@^1.12.1",
    "tailwindcss": "npm:tailwindcss@^4.1.10",
    "@tailwindcss/vite": "npm:@tailwindcss/vite@^4.1.12",
    "@std/assert": "jsr:@std/assert@1.0.11",
    "@std/dotenv": "jsr:@std/dotenv@0.225.3",
    "@std/fs": "jsr:@std/fs@1.0.19",
    "@std/log": "jsr:@std/log@0.224.14",
    "@std/yaml": "jsr:@std/yaml@1.0.10",
    "@cliffy/command": "jsr:@cliffy/command@1.0.0-rc.8",
    "@electric-sql/pglite": "npm:@electric-sql/pglite@0.3.11",
    "@electric-sql/pglite/vector": "npm:@electric-sql/pglite@0.3.11/vector",
    "@huggingface/transformers": "npm:@huggingface/transformers@3.7.6",
    "graphology": "npm:graphology@^0.25.4",
    "graphology-metrics": "npm:graphology-metrics@^2.2.0",
    "graphology-shortest-path": "npm:graphology-shortest-path@^2.0.2",
    "graphology-communities-louvain": "npm:graphology-communities-louvain@^2.0.1",
    "@modelcontextprotocol/sdk": "npm:@modelcontextprotocol/sdk@^1.0.4",
    "validator": "npm:validator@13.15.22",
    "@sentry/deno": "npm:@sentry/deno@^10.8.0"
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  }
}
