{
  "name": "@casys/pml",
  "version": "0.1.0",
  "exports": {
    ".": "./mod.ts",
    "./cli": "./src/cli/mod.ts",
    "./workspace": "./src/workspace.ts",
    "./security": "./src/security/mod.ts",
    "./permissions": "./src/permissions/mod.ts"
  },
  "publish": {
    "include": ["mod.ts", "src/**/*.ts", "README.md"]
  },
  "imports": {
    "@cliffy/command": "jsr:@cliffy/command@1.0.0-rc.8",
    "@std/fs": "jsr:@std/fs@1.0.19",
    "@std/path": "jsr:@std/path@^1",
    "@std/fmt": "jsr:@std/fmt@^1.0.8",
    "@std/fmt/colors": "jsr:@std/fmt@^1.0.8/colors",
    "@std/assert": "jsr:@std/assert@^1",
    "@std/encoding/hex": "jsr:@std/encoding@^1/hex",
    "@std/log": "jsr:@std/log@0.224.14",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.0"
  },
  "tasks": {
    "dev": "deno run -A src/cli/mod.ts",
    "compile": "deno compile -A --unstable-worker-options --no-check -o ~/.deno/bin/pml ./src/cli/mod.ts",
    "install": "deno task compile",
    "test": "deno test -A --unstable-worker-options --unstable-broadcast-channel tests/",
    "test:unit": "deno test -A --unstable-worker-options --unstable-broadcast-channel tests/*.ts",
    "test:e2e": "deno test -A --unstable-worker-options --unstable-broadcast-channel tests/e2e/",
    "check": "deno check src/**/*.ts"
  }
}
